{
    "extends": "../../tsconfig.packages.json",
    "compilerOptions": {
      "composite": true,
      "rootDir": "./src",
      "outDir": "./dist",
      "declaration": true,
      "declarationDir": "types",
      "typeRoots": [
        "./node_modules/@types",
        "packages/server/types"
      ]
    },
    "include": [ "src/*.ts", "src/**/*.ts" ],
    "exclude": [
      "node_modules",
      "dist",
      "src/example"
    ],
    "references": [
      { "path": "../api" }
    ]
  }